<%= form_tag sessions_path do %>
  <div class="field"><br/>
  	<%= text_field_tag :email, params[:email], {placeholder: 'Email'} %>
  </div>
  <div class="field"><br/>
   	<%= password_field_tag :password, value=nil , {placeholder: 'Password'} %> 
  </div>
  <div class="actions"><%=submit_tag 'Login' %></div>
<% end %>